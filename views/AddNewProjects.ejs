<!doctype html>
<head>
    <meta charset="utf-8">

    <title>Add New Projects</title>

    <link rel="stylesheet" href="workspace-assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="workspace-assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="workspace-assets/css/style-workspace.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="css/mainCreateProject.css">


</head>
<body>


<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">

        <div class="navbar-header">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu"
                    aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand" href="./">Human Activity Tracking</a>

        </div>

        <div id="main-menu" class="main-menu collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="menu-item-has-children dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                       aria-expanded="false"> <i class="menu-icon fa fa-dashboard"></i>My Projects</a>
                    <ul class="sub-menu children dropdown-menu">
                        <li><i class="menu-icon fa fa-dashboard"></i><a href="/manageProject">Manage Projects</a></li>
                        <li><i class="menu-icon fa fa-dashboard"></i><a href="/createProject">New Projects</a></li>
                    </ul>
                </li>


                <li class="menu-item-has-children dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                       aria-expanded="false"> <i class="menu-icon fa fa-laptop"></i>Project Participants</a>
                    <ul class="sub-menu children dropdown-menu">
                        <li><i class="fa fa-puzzle-piece"></i><a href="/addParticipant">Add Participants</a></li>
                    </ul>
                </li>
                <li class="menu-item-has-children dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                       aria-expanded="false"> <i class="menu-icon fa fa-table"></i>Datasets</a>
                    <ul class="sub-menu children dropdown-menu">
                        <li><i class="fa fa-table"></i><a href="tables-basic.html">Add Datasets</a></li>
                    </ul>
                </li>
                <li class="menu-item-has-children dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                       aria-expanded="false"> <i class="menu-icon fa fa-th"></i>Analysis Criteria</a>
                    <ul class="sub-menu children dropdown-menu">
                        <li><i class="menu-icon fa fa-th"></i><a href="/addCriteria">Add Criteria</a></li>
                    </ul>
                </li>

                <li class="menu-item-has-children dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                       aria-expanded="false"> <i class="menu-icon fa fa-tasks"></i>Run Experiment</a>
                    <ul class="sub-menu children dropdown-menu">
                        <li><i class="menu-icon fa fa-fort-awesome"></i><a href="font-fontawesome.html">Add
                                Experiment</a></li>

                    </ul>
                </li>

            </ul>
        </div>
    </nav>
</aside>

<div id="right-panel" class="right-panel" style="background-image: url(img/header.jpg); ">

    <div class="container-main">

        <div class="details">
            <div class="form-title-image" style="background-image: url(img/bg-01.jpg);">
				<span class="form-title-image-1">
					New Project Details 
				</span>

            </div>

            <form class="detail-form" action="/saveProject" method="post">
                <% if (message.length > 0) { %>
                <div style="color: green; padding-left: 20px"><%= message %></div>
                <% } %>
                <div class="input-text">
                    <span class="label">Project ID:</span>
                    <input class="textbox" type="text" name="id" placeholder="Enter project ID">

                </div>

                <div class="input-text">
                    <span class="label">Project Name:</span>
                    <input class="textbox" type="text" name="projectName" placeholder="Enter project name">

                </div>

                <div class="input-text">
                    <span class="label">Project Description:</span>
                    <input class="textbox" type="text" name="projectDescription"
                           placeholder="Enter project description">
                </div>

                <div class="input-text">
                    <span class="label">Start Date:</span>
                    <input class="textbox" type="date" name="startDate" placeholder="Start Date">
                </div>

                <div class="input-text">
                    <span class="label">End Date:</span>
                    <input class="textbox" type="date" name="endDate" placeholder="End Date">
                </div>

                <div class="form-btn">
                    <button class="form-btn-1">
						<span>
							Next
						</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="workspace-assets/js/vendor/jquery-2.1.4.min.js"></script>
<script src="workspace-assets/js/plugins.js"></script>
<script src="workspace-assets/js/main.js"></script>
</body>
</html>
