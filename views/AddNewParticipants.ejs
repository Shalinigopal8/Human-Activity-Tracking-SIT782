    <div id="right-panel" class="right-panel" style="background-image: url(img/header.jpg); ">
        <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
       <div class="container-main">
	  
		<div class="details">
			<div class="form-title-image" style="background-image: url(img/bg-01.jpg);">
				<span class="form-title-image-1">
					New Participant Details 
				</span>
	
			</div>

			<form class="detail-form" action="/saveParticipant" method="post">
                <% if (message.length > 0) { %>
                <div style="color: green; padding-left: 20px" ><%= message %></div>
                <% } %>
				<div class="input-text">
					<span class="label">Participant ID:</span>
					<input class="textbox" type="text" name="id" placeholder="Participant ID">
					
				</div>

				<div class="input-text">
					<span class="label">Participant Name:</span>
					<input class="textbox" type="text" name="name" placeholder="Participant Name">
				</div>

				<div class="input-text">
					<span class="label">Date of Birth:</span>
					<input class="textbox" type="date" name="dob" placeholder="Date of Birth">
				</div>

				
				<div class="form-btn">
					<button class="form-btn-1">
						<span>
							Next
						</span>
					</button>
				</div>
			</form>
		</div>
	</div>
